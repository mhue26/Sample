// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Student {
  id          Int       @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String    @unique
  phone       String?
  subjects    String    @default("") // Comma-separated subjects (e.g., "Math,Physics")
  hourlyRateCents Int   // Store as integer cents to avoid floating-point issues
  notes       String?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Ownership
  user        User?     @relation(fields: [userId], references: [id])
  userId      String?
}

// NextAuth-compatible User model with passwordHash for credentials login
model User {
  id             String    @id @default(cuid())
  name           String?
  email          String?   @unique
  emailVerified  DateTime?
  image          String?
  passwordHash   String?

  students       Student[]
}
